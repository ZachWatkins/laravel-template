{
	"version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "wsl.exe"
            }
        }
    },
	"tasks": [
        {
            "label": "Sail Up",
            "type": "shell",
            "command": "./vendor/bin/sail up -d",
            "runOptions": {
              "runOn": "folderOpen"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Git: Prune Branches Not In Origin",
            "type": "shell",
            "command": "./bin/gitprune",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
              "close": true,
              "revealProblems": "onProblem",
              "reveal": "silent"
            }
        },
        {
            "label": "Git: Fetch Branches Not In Local",
            "type": "shell",
            "command": "./bin/gitfetch",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
              "close": true,
              "revealProblems": "onProblem",
              "reveal": "silent"
            }
        }
    ]
}
