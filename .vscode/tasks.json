{
	"version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "wsl.exe"
            }
        }
    },
	"tasks": [
        {
            "label": "Sail Up",
            "type": "shell",
            "command": "./vendor/bin/sail",
            "args": ["up", "-d"],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Start Docker Desktop",
            "type": "shell",
            "command": "start",
            "args": ["docker"],
            "windows": {
                "command": "Start-Process",
                "args": [
                    "C:\\\\Program Files\\Docker\\Docker\\Docker Desktop.exe"
                ],
                "options": {
                    "shell": {
                        "executable": "powershell.exe",
                        "args": [
                            "-ExecutionPolicy",
                            "Bypass"
                        ]
                    }
                },
            },
        },
        {
            "label": "Git: Prune Branches Not In Origin",
            "type": "shell",
            "command": "./bin/gitprune",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
              "close": true,
              "revealProblems": "onProblem",
              "reveal": "silent"
            }
        },
        {
            "label": "Git: Fetch Branches Not In Local",
            "type": "shell",
            "command": "./bin/gitfetch",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
              "close": true,
              "revealProblems": "onProblem",
              "reveal": "silent"
            }
        }
    ]
}
